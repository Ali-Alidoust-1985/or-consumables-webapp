<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="mft" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>jdbc/JtaDataSource</jta-data-source>
        <non-jta-data-source>jdbc/NonJtaDataSource</non-jta-data-source>
        <class>com.mftplus.eesample.model.entity.IrcCatalogItem</class>
        <class>com.mftplus.eesample.model.entity.Patient</class>
        <class>com.mftplus.eesample.model.entity.OperatingRoom</class>
        <class>com.mftplus.eesample.model.entity.SurgeryCase</class>
        <class>com.mftplus.eesample.model.entity.Consumable</class>
        <class>com.mftplus.eesample.model.entity.CaseConsumption</class>
        <class>com.mftplus.eesample.model.entity.CaseReport</class>
        <class>com.mftplus.eesample.model.entity.Patient</class>
        <class>com.mftplus.eesample.model.entity.Staff</class>


        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
